<%= simple_form_for(@reu, html: {class: 'form-horizontal'}, remote: true) do |f| %>
  
  <%= f.input :name, as: :string, input_html: {class: 'span5'}, :placeholder => "nome completo" %>
    
  <%= f.input :cpf, as: :string, input_html: {class: 'span5'}, :placeholder => "apenas os números" %>
    
  <%= f.input :cnpj, as: :string, input_html: {class: 'span5'}, :placeholder => "apenas os números"  %>
    
  <%= f.input :contato, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.input :logradouro, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.input :numero, as: :integer, input_html: {class: 'span5'}, :placeholder => "apenas os números" %>
    
  <%= f.input :complemento, as: :string, input_html: {class: 'span5'}, :placeholder => "bloco, apartamento, letras" %>
    
  <%= f.input :bairro, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.input :cep, as: :string, input_html: {class: 'span5'} , :placeholder => "99.999-999"%>
 
  <%= f.input :cidade, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.input :estado, as: :string, input_html: {class: 'span5'} , :placeholder => "RJ" %>
  
  <%= f.input :telefone, as: :string, input_html: {class: 'span5'}, :placeholder => "(99) 9999-9999" %>
    
  <%= f.input :celular, as: :string, input_html: {class: 'span5'}, :placeholder => "(99) 99999-9999" %>
    
  <%= f.input :fax, as: :string, input_html: {class: 'span5'}, :placeholder => "(99) 9999-9999"  %>
  
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= f.button :submit, value: t('general.actions.save_and_go_to_new'), name: :submit_and_go_to_new, class: 'btn' %>
    <%= link_to(t('general.actions.cancel'), 'javascript:gebo_datatables.go_to_list()', class: 'btn') %>
  </div>
<% end %>


<script type="text/javascript" charset="utf-8">
  $(function(){
    p_scaffold_form.init_all();
  })
</script>
