<%= simple_form_for(@contrato, html: {class: 'form-horizontal'}, remote: true) do |f| %>
  
  <%= f.input :name, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.association :processo, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.input :valor, :wrapper => :prepend do %>
    <span class="add-on"><%= t('number.currency.format.unit')%></span><%= f.text_field :valor, class: :currency %>
  <% end %>
    
  <%= f.association :forma_pagamento, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.input :saldo, :wrapper => :prepend do %>
    <span class="add-on"><%= t('number.currency.format.unit')%></span><%= f.text_field :saldo, class: :currency %>
  <% end %>
  
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= f.button :submit, value: t('general.actions.save_and_go_to_new'), name: :submit_and_go_to_new, class: 'btn' %>
    <%= link_to(t('general.actions.cancel'), 'javascript:gebo_datatables.go_to_list()', class: 'btn') %>
  </div>
<% end %>


<script type="text/javascript" charset="utf-8">
  $(function(){
    p_scaffold_form.init_all();
  })
</script>
