<%= simple_form_for(@processo, html: {class: 'form-horizontal'}, remote: true) do |f| %>
  
  <%= f.input :numero, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.input :ano, as: :string, input_html: {class: 'span5'} %>
    
  <%= f.input :data_inicio, as: :datepicker %>
    
  <%= f.input :data_fim, as: :datepicker %>
    
  <%= f.association :cliente, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.association :reu, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.association :advogado, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.association :local, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.association :tipo_processo, input_html: {class: 'span5 chosen-options'} %>
    
  <%= f.input :custas, :wrapper => :prepend do %>
    <span class="add-on"><%= t('number.currency.format.unit')%></span><%= f.text_field :custas, class: :currency %>
  <% end %>
    
  <%= f.input :honorarios, :wrapper => :prepend do %>
    <span class="add-on"><%= t('number.currency.format.unit')%></span><%= f.text_field :honorarios, class: :currency %>
  <% end %>
  
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= f.button :submit, value: t('general.actions.save_and_go_to_new'), name: :submit_and_go_to_new, class: 'btn' %>
    <%= link_to(t('general.actions.cancel'), 'javascript:gebo_datatables.go_to_list()', class: 'btn') %>
  </div>
<% end %>


<script type="text/javascript" charset="utf-8">
  $(function(){
    p_scaffold_form.init_all();
  })
</script>
